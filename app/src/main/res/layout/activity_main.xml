<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1B2545"
    android:orientation="vertical"
    tools:context=".mvp.views.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#1B2545"
                    android:layout_marginBottom="4dp"
                    app:strokeWidth="4dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#545F83">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pic1_1" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:backgroundTint="#1B2545"
                    android:layout_marginBottom="4dp"
                    app:strokeWidth="4dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#545F83">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pic1_2" />

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#1B2545"
                    android:layout_marginBottom="4dp"
                    app:strokeWidth="4dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#545F83">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pic1_3" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#1B2545"
                    app:strokeWidth="4dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#545F83">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pic1_4" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/level"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:text="1"
            android:textColor="#1B2545"
            android:textSize="32sp"
            android:textStyle="bold" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPlay"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_marginHorizontal="56dp"
        android:background="@drawable/bg_open"
        android:text="Play"
        android:textAllCaps="false"
        android:textColor="#1B2545"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAbout"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_marginHorizontal="56dp"
        android:background="@drawable/bg_open"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="#1B2545"
        android:textSize="20sp" />
</LinearLayout>